<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.crm.domain.CrmStaff" table="staff">
        <id name="staffId">
            <generator class="uuid"/>
        </id>
        <property name="loginName"></property>
        <property name="loginPwd"></property>
        <property name="staffName"></property>
        <property name="gender"></property>
        <property name="onDutyDate">
            <column name="onDutyDate" sql-type="datetime"/>
        </property>
        <!-- 多对一：多个员工 属于 【一个职务】 -->
        <many-to-one name="post" class="com.crm.domain.CrmPost" column="postId"/>
    </class>
</hibernate-mapping>